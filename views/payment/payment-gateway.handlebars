<!-- stylesheet -->
<link rel="stylesheet" href="/public/css/payment/payment-gateway.css">
<!-- script -->
<script>
	$('#myTabs a').click(function (e) {
		e.preventDefault()
		$(this).tab('show')
	})

</script>

<!-- body -->
<div class="gateway">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">

				<article>
					<h1>Pay and you're done!</h1>

					<!-- payment mode detail starts from here -->
					<div class="row">
						<!-- Nav tabs -->
						<ul class="nav nav-tabs">
							<li role="presentation" class="active">
								<a href="#saved-card" aria-controls="saved-card" role="tab" data-toggle="tab">
									<i class="fa fa-credit-card-alt" aria-hidden="true"></i>
									Saved Cards
								</a>
							</li>
							<li role="presentation">
								<a href="#new-card" aria-controls="new-card" role="tab" data-toggle="tab">
									<i class="fa fa-credit-card" aria-hidden="true"></i>
									New Card
								</a>
							</li>
							<li role="presentation">
								<a href="#other" aria-controls="other" role="tab" data-toggle="tab">
									<i class="fa fa-google-wallet" aria-hidden="true"></i>
									Other
								</a>
							</li>
						</ul>

						<!-- Tab panes -->
						<div class="tab-content">
							<div role="tabpanel" class="tab-pane desc-div active" id="saved-card">							
								<div class="row">
									{{#if user.card}}

									<div class="col-md-12">
										<div class="row">
											<div class="col-md-1"><strong>Select</strong></div>
											<div class="col-md-4"><strong>Card Number</strong></div>
											<div class="col-md-4"><strong>Name on Card</strong></div>
											<div class="col-md-2"><strong>Card Expiry</strong></div>
											<div class="col-md-1"><strong>CVV</strong></div>
										</div>

										{{#each user.card}}
										<div class="row">
											<div class="col-md-1" style="text-align:center;"><input type="checkbox" value=""></div>
											<div class="col-md-4">{{_id}}</div>
											<div class="col-md-4">{{name}}</div>
											<div class="col-md-2">{{expiry}}</div>
											<div class="col-md-1">{{cvv}}</div>
										</div>
										{{/each}}
									</div>

									{{else}}

									<div>
										-- No saved cards --
									</div>

									{{/if}}
								</div>
							</div>

							<div role="tabpanel" class="tab-pane desc-div" id="new-card">
								<div class="row">
									<div class="col-md-2">
										<div class="row">Name on Card</div>
										<div class="row">Card Number</div>
										<div class="row">Card Expiry</div>
										<div class="row">Card CVV</div>
									</div>

									<div class="col-md-6">
										<form class="form" name="new-card-form" id="new-card-form">
											<div class="row">
												<input type="text" class="form-control" name="cardHolder" placeholder="Card Holder Name">
											</div>
											<div class="row">
												<input type="text" class="form-control" name="cardNumber" placeholder="Card Number" maxlength="16">
											</div>
											<div class="row">
												<input type="number" class="form-control" name="expMonth" placeholder="Month" min="1" max="12">
												<input type="number" class="form-control" name="expYear" placeholder="Year" min="2017" max="2051" maxlength="4" minlength="4">
											</div>
											<div class="row">
												<input type="password" class="form-control" name="cardCVV" placeholder="CVV" maxlength="4">
											</div>
											<!-- div class="row">
												<input type="submit" class="btn btn-default" value="Add Card">												
											</div --> 
										</form>
									</div>
								</div>
							</div>
							<div role="tabpanel" class="tab-pane desc-div" id="other">
								<div class="row">

									<div class="col-md-12">
										<div class="row">
											<!--div class="col-md-6">
												<div class="row">
													<div class="col-md-1" style="text-align:center;"><input type="checkbox" value=""></div>
													<div class="col-md-10" style="text-align:center;">
														<i class="fa fa-money" aria-hidden="true"></i>
														Cash
													</div>
												</div>
											</div -->
											<div class="col-md-6">
												<div class="row">
													<div class="col-md-1" style="text-align:center;"><input type="checkbox" value=""></div>
													<div class="col-md-10" style="text-align:center;">
														<i class="fa fa-google-wallet" aria-hidden="true"></i>
														Wallet ($ {{user.wallet}})
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>								
							</div>
						</div>
					</div>
					<!-- payment mode detail ends here -->					

					<!-- promo code section starts from here --
					<br/><br/>
					<div class="row">
						<form class="form" name="promo-code-form" id="promo-code-form">
							<div class="row">
								<input type="text" class="form-control" name="expMonth" placeholder="Promo Code">
								<input type="submit" class="btn btn-default" value="Apply Promo">												
							</div>
							<div class="row success">
								Your promo code is successfully applied
							</div>
							<div class="row error">
								Your promo code is invalid
							</div>
						</form>
					</div>
					<!-- promo code section end here -->

					<!-- payment summary starts from here -->					
					<br/>
					<div class="row">
						<div class="col-md-8" id="payment-summary">
							<div class="panel panel-default">
								<div class="panel-heading" role="tab" id="profile-head">
									<a role="button" data-parent="#accordion" aria-expanded="true" aria-controls="profile-panel">
										<h2 class="panel-title">
											Payment Summary
										</h2>
									</a>
								</div>

								<div id="profile-panel" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="profile-head">
									<div class="panel-body">
										<div class="row">
											<div class="col-md-6 col-md-offset-1"><label>Total Price</label></div>
											<div class="col-md-4 col-md-offset-1">
												<i class="fa fa-dollar"></i>
												{{total}}
											</div>
										</div>

										<!-- div class="row">
											<div class="col-md-6 col-md-offset-1"><label>Promo Discount</label></div>
											<div class="col-md-4 col-md-offset-1">$ 10</div>
										</div -->

										<div class="row">
											<div class="col-md-6 col-md-offset-1"><label>Taxes</label></div>
											<div class="col-md-4 col-md-offset-1">
												<i class="fa fa-dollar"></i>
												{{tax}}
											</div>
										</div>

										<div class="row">
											<div class="col-md-6 col-md-offset-1"><label>Net Price</label></div>
											<div class="col-md-4 col-md-offset-1">
												<i class="fa fa-dollar"></i>
												{{net}}
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>

						<div class="col-md-4" id="payment-now">
							<div class="row">
								<div class="col-md-6 col-md-offset-3">
									<input type="button" class="btn btn-default" value="Pay" />
								</div>
							</div>
						</div>

					</div>
					<!-- payment summary ends here -->					
					
				</article>

			</div>
		</div>
	</div>
</div>