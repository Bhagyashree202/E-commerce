<!-- stylesheet -->
<link rel="stylesheet" href="/public/css/user-gui/user-auth.css">

<!-- user forget panel starts from here -->
<article class="auth forget-password">
    
  <!-- user forget password section starts from here -->
  <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  
    <!-- forget password section starts frome here -->
    <div class="panel panel-default">
      <div class="panel-heading" role="tab" id="headingOne">
          <h4 class="panel-title">
            Forget Password
          </h4>
      </div>
      <div id="profile-panel" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
        <div class="panel-body">

          <div class="col-md-12">
            <div class="row">

              <!-- user account form starts from here -->
              <form method="post" action="/user/forget-password" id="form-user-profile">
              
                <!-- user email id section -->
                <div class="row">
                  <div class="col-md-4">
                    <label for="email-id">Email Id</label>
                  </div>
                  <div class="col-md-6">
                    <input type="text" class="form-control" name="email" id="email-id">
                  </div>
                </div>

                <!-- user submit form section -->
                <div class="row col-md-6 col-md-offset-3">
                  <div class="col-md-3 col-md-offset-1">
                    <input type="submit"class="btn btn-default" value="Send Password" />
                  </div>
                  <div class="col-md-3">
                  <input type="submit"class="btn btn-default" value="Forget Password" />
                  </div>
              </div>

              </form>
              <!-- user account form ends here -->

            </div>
          </div>

        </div>
      </div>
    </div>
    <!-- forget password sections ends here -->

  </div>
  <!-- user forget section ends here -->
      
</article>
<!-- user forget panel ends here -->